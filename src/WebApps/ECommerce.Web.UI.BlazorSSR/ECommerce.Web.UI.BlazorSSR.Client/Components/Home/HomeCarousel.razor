@rendermode InteractiveAuto

<MudCarousel Class="mud-width-full" Style="height:450px;" ShowArrows="true" ShowBullets="true" EnableSwipeGesture="true" AutoCycle="true" TData="object">
    <MudCarouselItem Transition="transition" Color="@Color.Primary">
        <div class="d-flex" style="height:100%">
            <img class="d-block w-100" src="/images/banner/banner1.png" alt="First slide">
        </div>
    </MudCarouselItem>
    <MudCarouselItem Transition="transition" Color="@Color.Secondary">
        <div class="d-flex" style="height:100%">
            <img class="d-block w-100" src="/images/banner/banner2.png" alt="First slide">
        </div>
    </MudCarouselItem>
    <MudCarouselItem Transition="transition">
        <div class="d-flex" style="height:100%">
            <img class="d-block w-100" src="/images/banner/banner3.png" alt="First slide">
        </div>
    </MudCarouselItem>
</MudCarousel>
